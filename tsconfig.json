{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"],
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/vuetify"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
