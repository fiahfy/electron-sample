{
  "name": "hosty",
  "description": "Hosts file manager based on Electron",
  "version": "0.0.0",
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "dependencies": {
    "electron-window-state": "^4.1.1",
    "is-electron-renderer": "^2.0.1",
    "vue": "^2.4.2",
    "vue-router": "^2.7.0",
    "vuex": "^2.4.0",
    "vuex-router-sync": "^4.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.5.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-html": "^3.2.1",
    "eslint-plugin-import": "^2.7.0",
    "file-loader": "^0.11.2",
    "npm-run-all": "^4.0.2",
    "resolve-url-loader": "^2.1.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "vue-loader": "^12.1.0",
    "vue-template-compiler": "^2.0.0",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.7.1"
  },
  "keywords": [
    "electron",
    "vue",
    "webpack"
  ],
  "main": "main.js",
  "private": true,
  "productName": "Hosty",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/hosty"
  },
  "scripts": {
    "build": "build -mw -p onTagOrDraft",
    "lint": "eslint src --ext .js,.vue",
    "hot:renderer": "webpack-dev-server --config webpack/config.renderer.hot.babel.js",
    "release": "cross-env NODE_ENV=production run-s webpack build",
    "start": "run-p watch:renderer start:main",
    "start:hot": "cross-env HOT=1 run-p hot:renderer start:main",
    "start:main": "run-s webpack:main start:main:electron",
    "start:main:electron": "electron main.js",
    "test": "run-s lint",
    "watch": "run-s webpack -- -w",
    "watch:main": "run-s webpack:main -- -w",
    "watch:renderer": "run-s webpack:renderer -- -w",
    "webpack": "webpack --config webpack/config.babel.js",
    "webpack:main": "webpack --config webpack/config.main.babel.js",
    "webpack:renderer": "webpack --config webpack/config.renderer.babel.js"
  }
}
